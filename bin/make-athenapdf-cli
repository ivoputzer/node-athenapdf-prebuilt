#!/usr/bin/env sh

set -e

git config -f .gitmodules --get-regex submodule.*url \
| sed 's/submodule.//g;s/.url//g' \
| awk '{print $2,$1}' \
| xargs -n 2 git clone --recursive 2> /dev/null \
| sh

echo "cwd ($(pwd))"

cd lib/athenapdf/cli

echo "install, build, link ($(pwd))"

npm install
npm run build
npm link
